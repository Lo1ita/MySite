@model IEnumerable<Lo1ita.Model.Article>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "MainPage";
}


<div id="divContent" class="row clearfix">
    <div class="col-md-8 column">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-12">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3 class="ContentItem-title">
                                @item.Title
                            </h3>
                            <div class="FoldCotent">
                                
                                    @if (item.Textlength > 65)
                                    {<p>
                                @Html.Raw(item.Details.Substring(0, 65))
                                    <button class="ContentItem-more">阅读全文<i class="fa fa-chevron-down"></i></button>
                                </p>
                                    }
                                    else
                                    {
                                        <p>@Html.Raw(item.Details)
                                            <button class="ContentItem-more">阅读全文<i class="fa fa-chevron-down"></i></button>
                                        </p>
                                    }

                                   

                            </div>
                            <div class="RichContent">
                                <div class="RichContent-inner">
                                    <p>
                                        @item.Details
                                    </p><button class="ContentItem-close">收起<i class="fa fa-chevron-up"></i></button>

                                </div>


                            </div>


                        </div>
                    </div>
                </div>
            }


        </div>

    </div>
    <div class="col-md-4 column">
        <div class="col-md-12">
            <div class="thumbnail">

                <div class="caption">
                    <a class="editbtn" href="/Articles/Create">
                        <i class="fa fa-edit">  写文章</i>
                    </a>
                    <a class="editbtn" href="/Articles/Draft">
                        <i class="fa fa-file-text-o">  草稿</i>
                    </a>
                </div>
            </div>
        </div>
