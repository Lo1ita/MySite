<script>
    $(function () {
        //加载时不显示全文
        $(".RichContent").each(function () {
            $(this).hide();
        })
        //部分文本点击事件
        $(".FoldCotent").click(function () {
            $(this).hide();
            $(this).next(".RichContent").show();
        })
        //收起按钮点击事件
        $(".ContentItem-close").click(function () {
            $(this).parent().parent().hide();
            $(this).parent().parent().prev(".FoldCotent").show();
        })
    });
</script>