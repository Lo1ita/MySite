        var PolygonArray = [];
        //在地图上加多边形
        for (var i = 0; i < mhPark.length; i++) {
            var Polygon= new AMap.Polygon({
                extData: i,
                map: map,
                path: mhPark[i].polygonpath,//设置多边形边界路径
                strokeColor: "#FF33FF", //线颜色
                strokeOpacity: 0.2, //线透明度
                strokeWeight: 3,    //线宽
                fillColor: "#1791fc", //填充色
